    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Compile in projects/esp",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/pxt-core/pxt-cli/cli.js",
            "cwd": "${workspaceFolder}/projects/esp",
            "outFiles": [
                "${workspaceFolder}/../pxt/built/*.js",
                "${workspaceFolder}/node_modules/pxt-core/built/*.js"
            ]
        }
    ]
}